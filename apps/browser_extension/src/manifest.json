{
	"manifest_version": 3,
	"name": "NewsNet Collector",
	"description": "Browser extension that collects social media posts for NewsNet",
	"options_page": "options.html",
	"background": { "service_worker": "background.bundle.js" },
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon-48.png"
	},
	"host_permissions": ["https://api.mortaga.de/*"],
	"permissions": ["activeTab", "clipboardWrite", "storage", "scripting"],
	"chrome_url_overrides": {
		"newtab": "newtab.html"
	},
	"icons": {
		"128": "icon-128.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "<all_urls>"],
			"js": ["contentScript.bundle.js"],
			"css": ["content.styles.css"]
		}
	],
	"devtools_page": "devtools.html",
	"web_accessible_resources": [
		{
			"resources": ["content.styles.css", "icon-128.png", "icon-48.png"],
			"matches": []
		}
	]
}
